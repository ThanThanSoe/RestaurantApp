<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_tool_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed">
            <ImageView
                android:id="@+id/vp_details_images"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                android:src="@drawable/home_image"
                app:layout_collapseMode="parallax"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_detail_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="150dp"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="4dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <org.mmtextview.components.MMTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/name"
                        android:text="yyyyyyyyyyyyyyyyyyyyyyyyyy"
                        android:layout_marginLeft="20dp"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"/>
                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fab_near_me"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/margin_medium_2"
                        android:layout_marginEnd="@dimen/margin_medium_3"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:src="@drawable/ic_near_me" />

                    <org.mmtextview.components.MMTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/description"
                        android:text="@string/description"
                        android:textColor="@android:color/black"
                        android:layout_below="@+id/name"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="50dp"/>

                    <LinearLayout
                        android:id="@+id/llRequirements"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_below="@id/description"
                        android:layout_marginTop="@dimen/margin_large"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/margin_medium_2"
                        android:paddingRight="@dimen/margin_medium_2"
                        android:weightSum="4"
                        android:layout_gravity="bottom"
                        >


                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginTop="15dp">
                            ​

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/ivRequirementOne"
                                android:layout_width="@dimen/margin_medium_3"
                                android:layout_height="@dimen/margin_medium_3"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/ic_watch" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/ivRequirementOne"
                                android:layout_centerHorizontal="true"
                                android:text="Talks"
                                android:textSize="@dimen/text_regular"
                                android:textColor="@android:color/black"/>
                            ​
                        </RelativeLayout>
                        ​

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginTop="15dp">
                            ​

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/ivRequirementTwo"
                                android:layout_width="@dimen/margin_medium_3"
                                android:layout_height="@dimen/margin_medium_3"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/ic_gps"
                                android:layout_marginLeft="30dp"/>
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/ivRequirementTwo"
                                android:layout_centerHorizontal="true"
                                android:text="Discover"
                                android:textSize="@dimen/text_regular"
                                android:textColor="@android:color/black"/>
                            ​
                            ​
                            ​
                        </RelativeLayout>
                        ​

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginTop="15dp">
                            ​

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/ivRequirementThree"
                                android:layout_width="@dimen/margin_medium_3"
                                android:layout_height="@dimen/margin_medium_3"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/ic_map"
                                android:layout_marginLeft="30dp"/>
                            ​ <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/ivRequirementThree"
                            android:layout_centerHorizontal="true"
                            android:text="Podcasts"
                            android:textSize="@dimen/text_regular"
                            android:textColor="@android:color/black" />
                            ​
                        </RelativeLayout>
                        ​

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginTop="15dp">
                            ​

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/ivRequirementFour"
                                android:layout_width="@dimen/margin_medium_3"
                                android:layout_height="@dimen/margin_medium_3"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/ic_store_green"
                                android:layout_marginLeft="30dp"/>
                            ​
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/ivRequirementFour"
                                android:layout_centerHorizontal="true"
                                android:text="My TED"
                                android:textSize="@dimen/text_regular"
                                android:textColor="@android:color/black" />

                            ​
                        </RelativeLayout>
                        ​
                    </LinearLayout>

                    <View
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_height="1.0dp"
                        android:layout_below="@id/llRequirements"
                        android:layout_marginTop="@dimen/margin_medium_2"
                        android:background="@android:color/black" />

                    <org.mmtextview.components.MMTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/menu"
                        android:text="Menu"
                        android:layout_below="@+id/divider"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"/>

                    <org.mmtextview.components.MMTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/detail"
                        android:text="Detail"
                        android:layout_below="@+id/divider"
                        android:textSize="20sp"
                        android:layout_toRightOf="@+id/menu"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="80dp"
                        android:textColor="@android:color/black"/>

                    <org.mmtextview.components.MMTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/review"
                        android:text="Review"
                        android:layout_below="@+id/divider"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="80dp"
                        android:layout_toRightOf="@+id/detail"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </com.google.android.material.appbar.CollapsingToolbarLayout>


    </com.google.android.material.appbar.AppBarLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>